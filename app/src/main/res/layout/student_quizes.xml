                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question6"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="a. no grade above 1.8 or 87% in all subjects in the current term."
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="b. have no Dropped (DRP) subject during the term of evaluation."
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="c. have no course still to be completed (INC) during the term of evaluation."
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="d. not have been found guilty of any minor or major offense throughout the student’s residence in the Collegeo"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio6"
                    android:layout_marginTop="20dp"
                    android:text="7. Candidates for graduation must satisy the following requirements except;"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question7"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="a. Completion of all academic and non-academic requirements"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="b. compliance of the residency requirements"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="c. must have beencleared of all financial obligations with the college"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="d. must complete all"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio7"
                    android:layout_marginTop="20dp"
                    android:text="8. Regular and special fees in the College shall be fixed by"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question8"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="a. School president"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="b. Board of Trustees"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="c. College Registrar"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="d. Teasurer's Office"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio8"
                    android:layout_marginTop="20dp"
                    android:text="9. A residence scholar who has no grade beow 1.6 in al subjects will receive a discount of"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question9"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="a. 50% discount on tuition fees"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="b. 70% discount on tuition fees"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="c. 75% discount on tuition fees"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="d. 80% discount on tuition fees"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio9"
                    android:layout_marginTop="20dp"
                    android:text="10. The college offers assisstance to financially challenged students who will be assigned in offices to render service for a maximum of 20 hours per week."
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question10"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="a. working student"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="b. student labor"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="c. office assistant"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="d. student helper"
                        android:textColor="#fff"
                        android:textSize="18dp" />
                </RadioGroup>



                <Button
                    android:id="@+id/btnSubmit"
                    android:hint="@string/btnRegister"
                    android:text="@string/btnRegister"
                    android:layout_below="@+id/btnRadio10"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:radius="360dp"/>

