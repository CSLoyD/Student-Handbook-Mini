<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="transparent"
            app:srcCompat="@drawable/ic_round_arrow_back_ios_24" />

        <TextView
            android:id="@+id/txtPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"

            android:fontFamily="@font/fredokaone_regular"
            android:gravity="center"
            android:text="Student Quizzes"
            android:textColor="#333333"
            android:textSize="45sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="235dp"
        >
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. What should serve as basis for enrolment for the succeeding term?"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question1"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/radia_id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="certificate of registration"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/radia_id2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="admission slip"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/radia_id3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="student clearance"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/radia_id4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="examination slip"
                        android:textColor="#fff"
                        android:textSize="18dp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio1"
                    android:layout_marginTop="20dp"
                    android:text="2. What is the maximum units for summer load?"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question2"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="5"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="12"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="9"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="7"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio2"
                    android:layout_marginTop="20dp"
                    android:text="3. Students may be allowed to enroll in another school only in
meritorious cases. Which of the following is not one of those cases?"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question3"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="To make up for his/her deficiencies"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="The subjects are minor subjects and are not offered during the particular term"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="The subject is offered but their schedule is in conflict with the other subjects enrolled in. "
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="To get a higher grade."
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio3"
                    android:layout_marginTop="20dp"
                    android:text="4. DRP stands for"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question4"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="a. officially dropped"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="b. damage restriction plan"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="c. detailed rating point"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="d. development role plan"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio4"
                    android:layout_marginTop="20dp"
                    android:text="5. INC stands for"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/btnRadio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question5"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="a. integrated"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="b. incomplete"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="c. including"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#E6E6E6"
                        android:text="d. incorporated"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/question6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRadio5"
                    android:layout_marginTop="20dp"
