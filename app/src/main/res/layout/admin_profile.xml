<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_round_arrow_back_ios_24" />

        <TextView
            android:id="@+id/txtPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredokaone_regular"
            android:gravity="center"
            android:paddingTop="30dp"
            android:text="My Profile"
            android:textColor="#333333"
            android:textSize="45sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="235dp"
        >
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adProfName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dummy D. Name"
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:textSize="30sp"

                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="259dp" />

                <TextView
                    android:id="@+id/adProfIdNo"
                    android:layout_below="@+id/adProfName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3143"
                    android:textColor="#fff"
                    android:layout_marginTop="10px"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteY="259dp" />

                <TextView
                    android:id="@+id/adProfPosition"
                    android:layout_below="@+id/adProfIdNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10px"
                    android:text="Instructor I"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteY="259dp" />

                <TextView
                    android:id="@+id/adProfColDept"
                    android:layout_below="@+id/adProfPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:text="IT Department"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteY="259dp" />
                <TextView
                    android:id="@+id/adProfGender"
                    android:layout_below="@+id/adProfColDept"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Male"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteY="259dp" />

                <Button
                    android:id="@+id/adProfUpdate"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adProfGender"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="157dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="166dp"
                    android:background="@drawable/rounded_button"
                    android:text="Update"
                    android:textColor="#fff" />


            </RelativeLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>